@{
    ViewData["Title"] = "Editar Contacto";
}
@model NetCoreBackend.Models.Contacts;

<h2>@ViewData["Title"]</h2>

<form asp-action="EditContact" method="post">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
    </div>
    <div class="form-group">
        <label for="Empresa">Empresa</label>
        <input type="text" class="form-control" id="Empresa" name="Empresa" value="@Model.Empresa" required />
    </div>
    <div class="form-group">
        <label for="Email">Correo Electrónico</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
    </div>
    <div class="form-group">
        <label for="Email">Correo Electrónico</label>
        <input type="tel" class="form-control" id="telefono" name="Telefono" value="@Model.Telefono" required />
    </div>
    <div class="form-group">
        <label for="DateOfBirth">Fecha de Nacimiento</label>
        <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth?.ToString("yyyy-MM-dd")" required />
    </div>
    <h5>Dirección</h5>
    <div class="form-group">
        <label for="Calle">Calle</label>
        <input type="text" class="form-control" id="Calle" name="Direccion.Calle" value="@Model.Direccion.Calle" required />
    </div>
    <div class="form-group">
        <label for="Localidad">Localidad</label>
        <input type="text" class="form-control" id="Localidad" name="Direccion.Localidad" value="@Model.Direccion.Localidad" required />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
