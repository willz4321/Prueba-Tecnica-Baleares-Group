@using System.Security.Claims
@{
    ViewData["Title"] = "Home Page";

    var userClaims = User?.Claims;

    var userName = userClaims?.FirstOrDefault(c => c.Type == ClaimTypes.Name)?.Value;
    var userAvatar = userClaims?.FirstOrDefault(c => c.Type == "Avatar")?.Value;
}

<div class="container text-center">
    <h1 class="display-4">Bienvenido @userName!</h1>

    @if (!string.IsNullOrEmpty(userAvatar))
    {
        <img src="@userAvatar" class="rounded-circle" alt="Foto de perfil" width="150" height="150" />
    }
    <p class="mt-3">¡Nos alegra verte de nuevo!</p>
    <p>Aprende sobre <a href="https://learn.microsoft.com/aspnet/core">la creación de aplicaciones web con ASP.NET Core</a>.</p>
</div>
